<h1>Welcome to Tweeter</h1>

<div class="row">
  <div class="col-md-4 pull-right">
    <h2>Sign Up</h2>
    <%= simple_form_for @user do |f| %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.input :username, label: "Desired Username" %>
      <%= f.submit "Sign Up", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col-md-4 pull-right">
    <h2>Sign In</h2>
    <%= simple_form_for :session, url: auth_path do |f| %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.submit "Sign In", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
