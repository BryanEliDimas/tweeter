<h1>Welcome to Tweeter</h1>

<h2>Sign Up</h2>
<%= simple_form_for @user do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.input :username, label: "Desired Username" %>
  <%= f.submit "Sign Up" %>
<% end %>


<h2>Sign In</h2>
<%= simple_form_for :session, url: auth_path do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.submit "Sign In" %>
<% end %>
