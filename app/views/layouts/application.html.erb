<!DOCTYPE html>
<html>
<head>
  <title>Tweeter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
      <% if notice %>
        <%= notice %>
      <% end %>

      <% if alert %>
        <%= alert %>
      <% end %>

      <% if !@current_user.nil? %>
        <%= link_to "Sign Out", sign_out_path, method: :delete %>
      <% end %>

    <%= yield %>
  </div>
</body>
</html>
